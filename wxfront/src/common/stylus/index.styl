.error-alert
  position: fixed
  top: 50%
  left: 50%
  min-width: 90px
  transform: translate(-50%,-50%)
  z-index: 2999
  padding: 15px 20px
  text-align: center
  background: rgba(0, 0, 0, .7)
  border-radius: 10px
  font-size: 0
  color: #fff
  &.alert-show {
    animation: show 2.5s;
  }
  .errorAlertIcon
    display: block
    font-size: 34px
    margin-bottom: 12px
  .errorAlertCon
    font-size: 14px
  @keyframes show {
    0% {
      opacity: 0
    }
    15% {
      opacity: 1
    }
    70% {
      opacity: 1
    }
    88% {
      display: none
    }
    100% {
      opacity: 0
      display: none
    }
  }